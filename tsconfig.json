{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "baseUrl": ".", // paths 路径解析起点
    "paths": {
      "@/*": [      // 别名路径设置
        "src/*"
      ]
    },
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "src/views/video/videoInfo/upload/imge.js", "src/views/video/videoInfo/upload/imge.js", "src/composable/login/LoginCheck.js"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
